<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    tools:context=".Home"
    android:orientation="vertical">

    <ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <com.denzcoskun.imageslider.ImageSlider
        android:id="@+id/slider"
        android:layout_width="287dp"
        android:layout_height="121dp"
        app:auto_cycle="true"
        app:corner_radius="20"
        app:delay="0"
        app:error_image="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.464"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.165"
        app:period="30"
        app:placeholder="@color/black">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/terkini1" />

    </com.denzcoskun.imageslider.ImageSlider>

    <ImageButton
        android:id="@+id/cekStatus"
        android:layout_width="94dp"
        android:layout_height="90dp"
        android:layout_marginTop="80dp"
        android:layout_marginEnd="108dp"
        android:background="@drawable/cek_permohonan"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/slider" />

    <ImageButton
        android:id="@+id/CS"
        android:layout_width="93dp"
        android:layout_height="87dp"
        android:layout_marginStart="92dp"
        android:layout_marginTop="76dp"
        android:background="@drawable/costumerservice"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/formpermohonan" />

    <ImageButton
        android:id="@+id/SOP"
        android:layout_width="93dp"
        android:layout_height="87dp"
        android:layout_marginTop="72dp"
        android:layout_marginEnd="108dp"
        android:background="@drawable/menu_sop"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cekStatus" />

    <ImageButton
        android:id="@+id/formpermohonan"
        android:layout_width="93dp"
        android:layout_height="87dp"
        android:layout_marginStart="92dp"

        android:layout_marginTop="80dp"
        android:background="@drawable/menu_form"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/slider" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="228dp"
        android:layout_height="28dp"
        android:layout_marginTop="52dp"
        android:text="Alur Permohonan Informasi"
        android:textColor="@color/black"
        android:textSize="16dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.127"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/CS" />

    <ImageView
        android:layout_width="234dp"
        android:layout_height="11dp"
        android:layout_marginStart="28dp"
        android:layout_marginTop="12dp"
        android:background="@drawable/pembatasmerah"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView" />
</ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>